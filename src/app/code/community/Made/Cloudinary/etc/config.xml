<?xml version="1.0"?>
<config>
    <modules>
        <Made_Cloudinary>
            <version>0.1.1</version>
        </Made_Cloudinary>
    </modules>
    <global>
        <models>
            <made_cloudinary>
                <class>Made_Cloudinary_Model</class>
                <resourceModel>cloudinary_resource</resourceModel>
            </made_cloudinary>
            <cms>
                <rewrite>
                    <adminhtml_template_filter>Made_Cloudinary_Model_Cms_Adminhtml_Template_Filter</adminhtml_template_filter>
                </rewrite>
            </cms>
            <catalog>
                <rewrite>
                    <product_image>Made_Cloudinary_Model_Catalog_Product_Image</product_image>
                    <product_media_config>Made_Cloudinary_Model_Catalog_Product_Media_Config</product_media_config>
                </rewrite>
            </catalog>
            <cms>
                <rewrite>
                    <wysiwyg_images_storage>Made_Cloudinary_Model_Cms_Wysiwyg_Images_Storage</wysiwyg_images_storage>
                </rewrite>
            </cms>
            <core>
                <rewrite>
                    <file_uploader>Made_Cloudinary_Model_Cms_Uploader</file_uploader>
                </rewrite>
            </core>
            <cloudinary_resource>
                <class>Made_Cloudinary_Model_Resource</class>
                <entities>
                    <sync>
                        <table>cloudinary_sync</table>
                    </sync>
                    <export>
                        <table>cloudinary_export</table>
                    </export>
                    <catalog_media_gallery>
                        <table>catalog_product_entity_media_gallery</table>
                    </catalog_media_gallery>
                </entities>
            </cloudinary_resource>
        </models>
        <blocks>
            <adminhtml>
                <rewrite>
                    <page_menu>Made_Cloudinary_Block_Adminhtml_Page_Menu</page_menu>
                </rewrite>
            </adminhtml>
            <made_cloudinary>
                <class>Made_Cloudinary_Block</class>
            </made_cloudinary>
        </blocks>
        <cms>
            <page>
                <tempate_filter>made_cloudinary/cms_template_filter</tempate_filter>
            </page>
            <block>
                <tempate_filter>made_cloudinary/cms_template_filter</tempate_filter>
            </block>
        </cms>
        <helpers>
            <catalog>
                <rewrite>
                    <image>Made_Cloudinary_Helper_Image</image>
                </rewrite>
            </catalog>
            <made_cloudinary>
                <class>Made_Cloudinary_Helper</class>
            </made_cloudinary>
        </helpers>
        <events>
            <catalog_product_save_after>
                <observers>
                    <made_upload_images_to_cloudinary>
                        <type>singleton</type>
                        <class>made_cloudinary/observer</class>
                        <method>uploadImagesToCloudinary</method>
                    </made_upload_images_to_cloudinary>
                </observers>
            </catalog_product_save_after>
            <catalog_product_save_before>
                <observers>
                    <made_delete_images_from_cloudinary>
                        <type>singleton</type>
                        <class>made_cloudinary/observer</class>
                        <method>deleteProductImagesFromCloudinary</method>
                    </made_delete_images_from_cloudinary>
                </observers>
            </catalog_product_save_before>
            <controller_front_init_before>
                <observers>
                    <made_load_custom_autoloaders>
                        <type>singleton</type>
                        <class>made_cloudinary/observer</class>
                        <method>loadCustomAutoloaders</method>
                    </made_load_custom_autoloaders>
                </observers>
            </controller_front_init_before>
        </events>
        <resources>
            <made_cloudinary_setup>
                <setup>
                    <module>Made_Cloudinary</module>
                </setup>
            </made_cloudinary_setup>
        </resources>
    </global>
    <adminhtml>
        <events>
            <model_config_data_save_before>
                <observers>
                    <made_validate_cloudinary_credentials>
                        <class>made_cloudinary/observer</class>
                        <method>validateCloudinaryCredentials</method>
                    </made_validate_cloudinary_credentials>
                </observers>
            </model_config_data_save_before>
        </events>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <made_cloudinary before="Mage_Adminhtml">Made_Cloudinary_Adminhtml</made_cloudinary>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <default>
        <cloudinary>
            <transforms>
                <fetch_format>1</fetch_format>
                <image_quality>80</image_quality>
                <image_dpr>1.0</image_dpr>
            </transforms>
            <config>
                <cdn_subdomain>1</cdn_subdomain>
            </config>
        </cloudinary>
    </default>
    <crontab>
        <jobs>
            <made_cloudinary_export>
                <schedule>
                    <cron_expr>* * * * *</cron_expr>
                </schedule>
                <run>
                    <model>made_cloudinary/cron::exportImages</model>
                </run>
            </made_cloudinary_export>
        </jobs>
    </crontab>
    <adminhtml>
        <layout>
            <updates>
                <adminhtml_made_cloudinary>
                    <file>made/cloudinary.xml</file>
                </adminhtml_made_cloudinary>
            </updates>
        </layout>
    </adminhtml>
</config>
